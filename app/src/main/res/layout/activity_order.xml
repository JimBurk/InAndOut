<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/order_background"
    tools:context="edu.orangecoastcollege.cs273.jburk.inandout.OrderActivity">

    <TextView
        android:id="@+id/headerTextView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header"
        android:textSize="24sp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"/>

    <TextView
        android:id="@+id/doubleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:text="@string/label_double_double"/>

    <EditText
        android:id="@+id/doubleDoubleEntry"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center"
        android:gravity="center"/>
        >
</GridLayout>
